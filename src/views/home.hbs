    <!--Script de categoria selecionada -->
    <script>
        // Variáveis globais para armazenar o tipo e a categoria selecionados
        let tipoSelecionado = 'Receita';
        let categoriaSelecionada = '';

        // Função para alternar as propriedades de estilo conforme o botão clicado
        function alternarEstilos(tipo) {
            const btnReceita = document.getElementById('btnReceita');
            const btnDespesa = document.getElementById('btnDespesa');

            if (tipo === 'Receita') {
                btnReceita.classList.remove('btn-secondary');
                btnReceita.classList.add('btn-primary');
                btnReceita.style.backgroundColor = '';
                btnReceita.style.color = '';

                btnDespesa.classList.remove('btn-primary');
                btnDespesa.classList.add('btn-secondary');
                btnDespesa.style.backgroundColor = 'whitesmoke';
                btnDespesa.style.color = '#0062cc';
            } else if (tipo === 'Despesa') {
                btnDespesa.classList.remove('btn-secondary');
                btnDespesa.classList.add('btn-primary');
                btnDespesa.style.backgroundColor = '';
                btnDespesa.style.color = '';

                btnReceita.classList.remove('btn-primary');
                btnReceita.classList.add('btn-secondary');
                btnReceita.style.backgroundColor = 'whitesmoke';
                btnReceita.style.color = '#0062cc';
            }

            // Atualiza a variável global com o tipo selecionado
            tipoSelecionado = tipo;

            // Exibe a lista de categoria de acordo com o tipo selecionado
            exibirListaCategoria();
        }

        // Função para exibir a lista de categoria de acordo com o tipo selecionado
        function exibirListaCategoria() {
            const categoriaReceita = document.getElementById('categoriaReceita');
            const categoriaDespesa = document.getElementById('categoriaDespesa');

            if (tipoSelecionado === 'Receita') {
                categoriaReceita.style.display = 'block';
                categoriaDespesa.style.display = 'none';
            } else if (tipoSelecionado === 'Despesa') {
                categoriaReceita.style.display = 'none';
                categoriaDespesa.style.display = 'block';
            }
        }

        // Adiciona eventos de clique aos botões
        document.getElementById('btnReceita').addEventListener('click', function () {
            alternarEstilos('Receita');
        });

        document.getElementById('btnDespesa').addEventListener('click', function () {
            alternarEstilos('Despesa');
        });

        // Adiciona evento de clique ao botão que abre o modal
        document.getElementById('btnAbrirModal').addEventListener('click', function () {
            // Define a opção "Receita" como selecionada
            document.getElementById('receita').checked = true;
            // Atualiza a variável global com o tipo selecionado
            tipoSelecionado = 'Receita';
            // Exibe a lista de categoria de acordo com o tipo selecionado
            exibirListaCategoria();
        });

        // Adiciona evento de mudança ao selecionar a categoria de receita
        document.getElementById('categoriaReceita').addEventListener('change', function () {
            categoriaSelecionada = this.value;
        });

        // Adiciona evento de mudança ao selecionar a categoria de despesa
        document.getElementById('categoriaDespesa').addEventListener('change', function () {
            categoriaSelecionada = this.value;
        });


    </script>



    <!-- Script de salvamento dos dados-->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('form-lancamento');

            form.addEventListener('submit', function (event) {
                event.preventDefault(); // Impede o comportamento padrão de envio do formulário

                // Obtém os valores dos campos do formulário
                const tipoLancamento = document.querySelector('input[name="tipo"]:checked').value;

                const categoriaReceita = document.getElementById('categoriaReceita').value;
                const categoriaDespesa = document.getElementById('categoriaDespesa').value;

                const categoriaSelecionada = (tipoLancamento === 'Receita') ? categoriaReceita : categoriaDespesa;

                const forma = form.forma.value;
                const data = form.data.value;
                const valor = form.valor.value;
                const descricao = form.descricao.value;

                // Cria o objeto com os dados do lançamento
                const novoLancamento = {
                    tipo: tipoLancamento,
                    categoria: categoriaSelecionada,
                    forma: forma,
                    data: data,
                    valor: valor,
                    descricao: descricao
                };

                // Envia os dados do novo lançamento para o backend
                fetch('/lancamentos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(novoLancamento)
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Erro ao criar lançamento');
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Lançamento criado com sucesso:', data);
                        // Limpa os campos do formulário
                        form.reset();
                        // Restaura os estilos dos botões para o estado inicial
                        document.getElementById('btnReceita').click(); // Simula o clique no botão Receita
                        // Exibe a mensagem de sucesso
                        document.getElementById('successMessage').style.display = 'block';
                        // Esconde a mensagem após 3 segundos
                        setTimeout(function () {
                            document.getElementById('successMessage').style.display = 'none';
                        }, 4000);
                    })
                    .catch(error => {
                        console.error('Erro:', error);
                    });
            });
        });

    </script>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Função para obter o saldo atual e atualizar dinamicamente
            const obterESaldoAtualizar = () => {
                fetch('/lancamentos')
                    .then(response => response.json())
                    .then(data => {
                        // Inicializa o total de receitas e despesas
                        let totalReceita = 0;
                        let totalDespesa = 0;

                        // Calcula o total de receitas e despesas
                        data.forEach(lancamento => {
                            if (lancamento.Tipo_de_lançamento === 'Receita') {
                                totalReceita += parseFloat(lancamento.Valor);
                            } else {
                                totalDespesa += parseFloat(lancamento.Valor);
                            }
                        });

                        // Calcula o saldo atual
                        const saldoAtual = totalReceita - totalDespesa;

                        // Apresenta o saldo atual no elemento HTML
                        document.getElementById('saldoAtualP').textContent = saldoAtual.toFixed(2);
                    })
                    .catch(error => console.error('Erro ao obter os lançamentos:', error));


            };

            // Chama a função inicialmente
            obterESaldoAtualizar();

            // Define um intervalo para atualizar o saldo a cada 60 segundos (ou o intervalo desejado)
            setInterval(obterESaldoAtualizar, 2000); // 60000 milissegundos = 60 segundos
        });
    </script>




